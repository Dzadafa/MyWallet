<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root_wishlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/widget_background_color"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_wishlist"
        android:textColor="@color/widget_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_widget_wishlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        tools:listitem="@layout/widget_item_wishlist" /> <TextView
        android:id="@+id/tv_widget_wishlist_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No items in wishlist"
        android:textColor="@color/widget_text_color"
        android:visibility="gone" />

</LinearLayout>
